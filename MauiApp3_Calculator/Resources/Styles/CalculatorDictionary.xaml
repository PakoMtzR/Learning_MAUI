<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!--#region VerticalStackLayout -->
    <Style TargetType="VerticalStackLayout">
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        <Setter Property="Margin" Value="0,0,25,0"/>
    </Style>
    <!--#endregion-->

    <!--#region Labels -->
    <Style Class="LabelText" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="End"/>
    </Style>

    <Style Class="LabelOperations" TargetType="Label">
        <Setter Property="FontSize" Value="50"/>
    </Style>

    <Style Class="LabelResult" TargetType="Label">
        <Setter Property="FontSize" Value="30"/>
    </Style>
    <!--#endregion-->

    <!--#region BoxView -->
    <Style TargetType="BoxView">
        <Setter Property="Color" 
                Value="{AppThemeBinding Dark={StaticResource DarkPrimary}, Light={StaticResource LightPrimary}}"/>
    </Style>
    <!--#endregion-->

    <!--#region Button -->
    <Style TargetType="Button">
        <Setter Property="Background" 
                Value="{AppThemeBinding Dark={StaticResource DarkSecondary}, Light={StaticResource LightSecondary}}"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource OffBlack}}"/>
    </Style>
    <!--#endregion-->
</ResourceDictionary>
    
    
    